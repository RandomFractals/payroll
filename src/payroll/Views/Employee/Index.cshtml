@model IEnumerable<payroll.Models.Employee>
@{ 
    ViewBag.Title = "Employees";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewData["Title"]</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>Employee</th>
                <th>@Html.DisplayNameFor(model => model.Salary)</th>
                <th>@Html.DisplayNameFor(model => model.Dependents)</th>
                <th>Deductions</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@item.EmployeeID">
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        <a asp-action="EmployeeInfo" asp-route-id="@item.EmployeeID">@item.Dependents.Count</a>
                    </td>
                    <td>
                        <!-- todo: add deductions amount display  -->
                    </td>
                    <td>
                        <a asp-action="DeleteEmployee" asp-route-id="@item.EmployeeID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <a asp-action="AddEmployee">Add Employee</a>
    </div>
</div>
